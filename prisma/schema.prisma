generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Org {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password_hash String
  cep           String
  address       String
  whatsapp      String
  created_at    DateTime @default(now())

  pets Pet[]

  @@map("orgs")
}

enum Stage {
  Filhote
  Adulto
}

enum PET_SIZE {
  Pequenino
  MÃ©dio
  Grande
}

enum Energy {
  Baixa
  Moderada
  Alta
}

enum Independence {
  Baixa
  Moderada
  Alta
}

enum Environment {
  Pequeno
  Moderado
  Amplo
}

model Pet {
  id                 String       @id @default(uuid())
  name               String
  about              String
  life_stage         Stage        @default(Filhote)
  size               PET_SIZE     @default(Pequenino)
  energy_level       Energy       @default(Moderada)
  independence_level Independence @default(Moderada)
  environment        Environment  @default(Moderado)
  city               String

  org    Org    @relation(fields: [org_id], references: [id])
  org_id String

  @@map("pets")
}
